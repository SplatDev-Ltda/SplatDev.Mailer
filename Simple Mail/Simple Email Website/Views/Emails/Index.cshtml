@model Simple_Email_Website.Models.Email_Message

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Send Email</title>
    <style>
        body {
            font-family: 'Segoe UI';
            background: #92c7e2;
        }

        .form-horizontal {
            width: 250px;
            height: 350px;
            margin: 0 auto;
            background-color: #fff;
            opacity: 0.9;
            border-radius: 20px;
            box-shadow: 0 0 20px #000;
            padding: 20px;
        }

        form {
            width: 200px;
            margin: 0 auto;
            text-align: left;
        }

        input, textarea {
            width: 90%;
            border: none;
            border-bottom: 1px solid #ccc;
            padding: 0 15px;
            height: 32px;
            resize: none;
            font-family: 'Segoe UI';
            outline: none;
        }

        textarea {
            height: 80px !important;
        }

        .btn {
            margin-top: 30px;
            width: 100%;
        }

        h4 {
            padding-bottom: 3px;
            border-bottom: 1px solid #ccc;
            text-align: center;
        }

        .alert {
            width: 100% height: 32px;
            line-height: 32px;
            text-align: left;
            padding: 0 15px;
            border-radius: 5px;
            display: none;
            font-size: 10px;
        }


        .alert-success {
            background-color: #00ff90;
            border: 1px solid #4cff00;
            color: #1b553f;
            display: block !important;
        }

        .alert-failture {
            background-color: #ff6a00;
            border: 1px solid #ff0000;
            color: #ffffff;
            display: block !important;
        }
    </style>
</head>
<body>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Send an Email</h4>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "your address" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Message, new { htmlAttributes = new { @class = "form-control", rows = 20, columns = 20, plagenolder = "your message" } })
                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="Send" class="btn btn-default" />
                    <br />
                    <div class="alert"></div>
                </div>
            </div>
        </div>
    }

    <script type="text/javascript">
        (function () {
            $(".btn").click(function () {
                $.ajax({
                    url: "/Emails/SendEmail",
                    data: $("#Email,#Message").serialize()
                }).done(function (data) {
                    var parsed_data = JSON.parse(data);
                    if (parsed_data.Success) {
                        var alert = $(".alert");
                        alert.removeClass("alert-failure").addClass("alert-success");
                        alert.html(parsed_data.Message);
                    } else {
                        var alert = $(".alert");
                        alert.removeClass("alert-success").addClass("alert-failure");
                        alert.html(parsed_data.Message);
                    }
                });
            });
        }())
    </script>
</body>
</html>
